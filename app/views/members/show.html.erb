<%= render  "layouts/header" %>
<div class="container justify-content-center" style="margin-top: 10px; padding: 10px; width: 50%;">
    <div class="row">
        <div class="col-12">
            <h4 class="display-4"><b><%= @member.name %></b></h6>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Gender
        </div>
        <div class="col-10">
            : <%= @member.gender %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Date of Birth 
        </div>
        <div class="col-10">
            : <%= @member.dob.strftime('%d-%m-%Y') %> 
            <small class="text-muted">(dd-mm-yyyy)</small>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Status
        </div>
        <div class="col-10">
            : <%= @member.status %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Occupation
        </div>
        <div class="col-10">
            : <%= @member.occupation %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Phone
        </div>
        <div class="col-10">
            : <%= @member.phone %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Email
        </div>
        <div class="col-10">
            : <%= @member.email %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Instagram
        </div>
        <div class="col-10">
            : <%= @member.instagram %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Line
        </div>
        <div class="col-10">
            : <%= @member.line %>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Address
        </div>
        <div class="col-10">
            : <%= @member.address %>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <%= link_to  "See Attended Events", members_path, class:"btn btn-outline-primary" %>
        </div>
        <div class="col-2" style="padding-left: 50px;">
            <%= link_to "Back", members_path, class:"btn btn-outline-secondary" %>
        </div>
    </div>
</div>