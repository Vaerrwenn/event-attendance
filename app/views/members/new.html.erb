<%= render 'layouts/header' %>

<div class="container">
<%= simple_form_for @member do |f| %>
<div class="col col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <%= f.input :name, label: "Full Name: ", error: "Full Name is required!" %>
    <div class="valid-feedback">
        Looks good!
    </div>
    <div class="invalid-feedback">
        Must be filled!
    </div>
</div>
<div class="col col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <%= f.input :dob, label: "Date of Birth: ", error: "Date of Birth is required!", html5: true %>
    <div class="valid-feedback">
        Looks good!
    </div>
    <div class="invalid-feedback">
        Must be filled!
    </div>
</div>
<div class="col col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <%= f.input :address, label: "Address: ", error: "Address is required!" %>
    <div class="valid-feedback">
        Looks good!
    </div>
    <div class="invalid-feedback">
        Must be filled!
    </div>
</div>
<div class="col col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <%= f.button :submit, "Add Member", class: "btn btn-primary" %>
</div>
<% end %>
</div>