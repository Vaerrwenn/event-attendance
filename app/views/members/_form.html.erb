<%= simple_form_for @member do |f| %>
<%= f.input :name, label: "Full Name: " %>
<%= f.input :gender, label: "Gender: ", as: :select, 
    collection: [['Male', 'Male'], ['Female', 'Female'], ['Others', 'Others']] %>
<%= f.input :dob, label: "Date of Birth: ", start_year: Date.today.year - 150, end_year: Date.today.year %>
<%= f.input :status, label: "Status: ", as: :select, 
    collection: [['Unmarried', 'Unmarried'], ['Married', 'Married'], ['Divorced', 'Divorced'], 
    ['Widow/Widower', 'Widow/Widower']], class: "form-control" %>
<%= f.input :occupation, label: "Occupation: ", as: :select, 
    collection: [['Student', 'Student'], ['College/University Student', 'College/University Student'], 
    ['Freelancer', 'Freelancer'], ['Government Employee', 'Government Employee'], ['Private Employee', 'Private Employee'], 
    ['Entrepeneur', 'Entrepeneur'], ['Others', 'Others']] %>
<%= f.input :phone, label: "Phone Number: ", error: "Phone must be filled with number", hint: "Must be filled with number.", as: :integer,
    input_html: { onkeydown: "phoneNumCheck(event)" } %>
<%= f.input :email, label: "Email: ", hint: "Mail must be valid! Example: user@mail.com" %>
<%= f.input :instagram, label: "Instagram: " %>
<%= f.input :line, label: "Line: " %>
<%= f.input :address, label: "Address: " %>
<%= f.button :button, "Reset", :type => 'reset', class: "btn btn-secondary" %>
<%= f.button :submit, "Save", class: "btn btn-primary" %>
<% end %>