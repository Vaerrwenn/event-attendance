<%= simple_form_for @member do |f| %>
<%= f.input :name, label: "Full Name: ", error: "Full Name is required!", class: "form-control" %>
<%= f.input :gender, label: "Gender: ", as: :select, 
    collection: [['Male', 'Male'], ['Female', 'Female'], ['Others', 'Others']], 
    error: "Gender is required!" %>
<%= f.input :dob, label: "Date of Birth: ", error: "Date of Birth is required!", html5: true, 
    class: "form-control", start_year: Date.today.year - 150, end_year: Date.today.year %>
<%= f.input :status, label: "Status: ", html5: true, as: :select, 
    collection: [['Unmarried', 'Unmarried'], ['Married', 'Married'], ['Divorced', 'Divorced'], 
    ['Widow/Widower', 'Widow/Widower']], class: "form-control" %>
<%= f.input :occupation, label: "Occupation: ", html5: true, as: :select, 
    collection: [['Student', 'Student'], ['College/University Student', 'College/University Student'], 
    ['Freelancer', 'Freelancer'], ['Government Employee', 'Government Employee'], ['Private Employee', 'Private Employee'], 
    ['Entrepeneur', 'Entrepeneur'], ['Others', 'Others']], class: "form-control" %>
<%= f.input :phone, label: "Phone Number: ", html5: true, error: "Phone must be filled with number", 
    class: "form-control", hint: "Must be numeric.", as: :integer,
    input_html: { pattern: '[^a-zA-Z]+' } %>
<%= f.input :email, label: "Email: ", html5: true, error: "Email must be valid!", class: "form-control", 
    hint: "Mail must be valid! Example: user@mail.com" %>
<%= f.input :instagram, label: "Instagram: ", html5: true, class: "form-control" %>
<%= f.input :line, label: "Line: ", html5: true, class: "form-control" %>
<%= f.input :address, label: "Address: ", error: "Address is required!", class: "form-control" %>
<%= f.button :button, "Reset", :type => 'reset', class: "btn btn-secondary" %>
<%= f.button :submit, "Save", class: "btn btn-primary" %>
</div>
<% end %>